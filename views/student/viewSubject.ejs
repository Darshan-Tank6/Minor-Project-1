<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= subject.name %> - Lectures</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen p-6">
    <!-- Header -->
    <header class="mb-6 flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-800">
        <%= subject.name %> - Lectures
      </h1>
      <a
        href="/student/dashboard"
        class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700"
        >‚Üê Back</a
      >
    </header>

    <!-- Teacher -->
    <div class="bg-white p-4 rounded-2xl shadow mb-6">
      <p class="text-lg font-medium">
        Teacher: <%= subject.teachingProfId ? subject.teachingProfId.name :
        "TBA" %>
      </p>
    </div>

    <!-- Lecture List -->
    <section class="bg-white p-4 rounded-2xl shadow">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">All Lectures</h2>
      <% if (lectures.length === 0) { %>
      <p class="text-gray-500">No lectures scheduled</p>
      <% } else { %>
      <ul class="divide-y divide-gray-200">
        <% lectures.forEach(lec => { %>
        <li class="py-3">
          <p class="font-semibold text-blue-700"><%= lec.day %></p>
          <p class="text-sm text-gray-700">
            <%= lec.startTime %> - <%= lec.endTime %>
          </p>
          <p class="text-sm text-gray-700">Room: <%= lec.room %></p>
          <p class="text-sm text-gray-700">Prof: <%= lec.teacher %></p>
        </li>
        <% }) %>
      </ul>
      <% } %>
    </section>
  </body>
</html>

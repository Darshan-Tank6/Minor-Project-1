<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add College Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 min-h-screen">
    <!-- Navbar -->
    <nav
      class="bg-purple-700 text-white px-6 py-4 flex items-center justify-between shadow-lg"
    >
      <div class="flex items-center space-x-3">
        <img
          src="/images/logo.jpg"
          alt="EduBridge Logo"
          class="w-10 h-10 object-cover rounded-lg"
        />
        <span class="text-xl font-bold">EduBridge</span>
      </div>
      <div class="space-x-6">
        <a href="/" class="hover:text-gray-200">Home</a>
        <a href="/about" class="hover:text-gray-200">About</a>
        <a href="/contact" class="hover:text-gray-200">Contact</a>
        <a href="/auth/auth/logout" class="hover:text-gray-300">Logout</a>
      </div>
    </nav>
    <!-- Form Section -->
    <div class="max-w-3xl mx-auto bg-white p-8 mt-10 rounded-2xl shadow-lg">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Add College Details</h2>
      <form
        action="/student/add-college-details"
        method="post"
        class="space-y-6"
      >
        <!-- College Select -->
        <div>
          <label class="block text-gray-700 font-semibold mb-2"
            >Select College</label
          >
          <% if (colleges.length === 0) { %>
          <p class="text-gray-500">No colleges found.</p>
          <% } else { %>
          <select
            name="college"
            class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500"
          >
            <% colleges.forEach(college => { %>
            <option value="<%= college._id %>">
              <%= college.name %> - <%= college.location %>
            </option>
            <% }) %>
          </select>
          <% } %>
        </div>
        <!-- Department Select -->
        <div>
          <label class="block text-gray-700 font-semibold mb-2"
            >Select Department</label
          >
          <% if (departments.length === 0) { %>
          <p class="text-gray-500">No departments found.</p>
          <% } else { %>
          <select
            name="department"
            class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500"
          >
            <% departments.forEach(department => { %>
            <option value="<%= department._id %>">
              <%= department.name %>
            </option>
            <% }) %>
          </select>
          <% } %>
        </div>
        <!-- Class Select -->
        <div>
          <label class="block text-gray-700 font-semibold mb-2"
            >Select Class</label
          >
          <% if (classes.length === 0) { %>
          <p class="text-gray-500">No classes found.</p>
          <% } else { %>
          <select
            name="class"
            class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500"
          >
            <% classes.forEach(classe => { %>
            <option value="<%= classe._id %>"><%= classe.name %></option>
            <% }) %>
          </select>
          <% } %>
        </div>
        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-purple-700 text-white py-3 rounded-xl font-semibold hover:bg-purple-800 transition"
        >
          Save Details
        </button>
      </form>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create College</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gradient-to-r from-purple-50 to-purple-100 min-h-screen">
    <!-- Navbar -->
    <nav class="bg-purple-700 text-white shadow-md">
      <div
        class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center"
      >
        <!-- Logo + Title -->
        <div class="flex items-center space-x-3">
          <img
            src="/images/logo.jpg"
            alt="EduBridge Logo"
            class="h-10 w-auto rounded"
          />
          <h1 class="text-xl font-bold">EduBridge</h1>
        </div>
        <!-- Navbar Links -->
        <ul class="flex space-x-6">
          <li><a href="/" class="hover:text-gray-200">Home</a></li>
          <li>
            <a href="/departments" class="hover:text-gray-200">Departments</a>
          </li>
          <li><a href="/classes" class="hover:text-gray-200">Classes</a></li>
          <li><a href="/auth/logout" class="hover:text-gray-200">Logout</a></li>
        </ul>
      </div>
    </nav>
    <!-- Main Section -->
    <div class="flex items-center justify-center p-6">
      <div
        class="max-w-lg w-full bg-white p-8 mt-10 rounded-2xl shadow-xl border border-gray-200"
      >
        <h2 class="text-3xl font-bold text-purple-700 mb-6 text-center">
          Create College
        </h2>
        <!-- Alert Messages -->
        <% if (success_msg && success_msg.length > 0) { %>
        <div class="bg-green-100 text-green-700 p-3 rounded mb-4 text-center">
          <%= success_msg %>
        </div>
        <% } %> <% if (error_msg && error_msg.length > 0) { %>
        <div class="bg-red-100 text-red-700 p-3 rounded mb-4 text-center">
          <%= error_msg %>
        </div>
        <% } %>
        <!-- Form -->
        <form method="POST" action="/admin/college" class="space-y-5">
          <!-- College Name -->
          <div>
            <label class="block text-gray-700 font-medium mb-2"
              >College Name</label
            >
            <input
              type="text"
              name="name"
              placeholder="e.g. ABC College"
              required
              value="<%= typeof name !== 'undefined' ? name : '' %>"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none"
            />
          </div>
          <!-- Location -->
          <div>
            <label class="block text-gray-700 font-medium mb-2">Location</label>
            <input
              type="text"
              name="location"
              placeholder="e.g. Mumbai, Gujarat"
              value="<%= typeof location !== 'undefined' ? location : '' %>"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none"
            />
          </div>
          <!-- Submit -->
          <button
            type="submit"
            class="w-full bg-purple-600 text-white py-3 rounded-lg font-semibold hover:bg-purple-700 transition-all"
          >
            Create College
          </button>
        </form>
        <a
          href="/admin/colleges"
          class="block mt-6 text-purple-600 font-medium text-center hover:underline"
        >
          ‚Üê Back to Colleges
        </a>
      </div>
    </div>
  </body>
</html>

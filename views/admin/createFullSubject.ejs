        group.className =
          "schedule-group mb-4 space-y-2 border p-3 rounded relative bg-gray-50";
        group.innerHTML = `
<button type="button" onclick="this.parentElement.remove()" class="absolute top-2 right-2 text-red-600 hover:text-red-800">
üóë
</button>

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Teachers in <%= department.name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-purple-50 min-h-screen">
    <!-- Navbar -->
    <nav
      class="bg-purple-700 text-white px-8 py-4 shadow-lg flex items-center justify-between"
    >
      <div class="flex items-center space-x-3">
        <img
          src="/images/logo.jpg"
          alt="EduBridge Logo"
          class="h-10 w-10 rounded-full"
        />
        <span class="text-2xl font-bold tracking-wide">EduBridge</span>
      </div>
      <div class="space-x-6">
        <a href="/" class="hover:text-gray-200">Home</a>
        <a href="/about" class="hover:text-gray-200">About Us</a>
        <a href="/contact" class="hover:text-gray-200">Contact</a>
        <a href="/auth/auth/logout" class="hover:text-gray-300">Logout</a>
      </div>
    </nav>
    <!-- Main Content -->
    <div class="max-w-4xl mx-auto bg-white p-8 mt-10 rounded-2xl shadow-lg">
      <h2 class="text-2xl font-bold text-purple-700 mb-6">
        Teachers in <%= department.name %> (<%= department.collegeId.name %>)
      </h2>
      <% if (teachers.length === 0) { %>
      <p class="text-gray-600">No Teachers found.</p>
      <% } else { %>
      <ul class="space-y-4">
        <% teachers.forEach(tchr => { %>
        <li
          class="border p-5 rounded-xl shadow-sm bg-purple-50 hover:shadow-md transition"
        >
          <h3 class="text-lg font-semibold text-purple-800">
            <%= tchr.name %>
          </h3>
          <p class="text-sm text-gray-700">
            Department: <%= tchr.departmentId.name %>
          </p>
          <p class="text-sm text-gray-700">
            Assigned Subjects: <% if (tchr.assignedSubjects.length > 0) { %> <%
            tchr.assignedSubjects.forEach(function(subject, index) { %> <%=
            subject.name %><%= index < tchr.assignedSubjects.length - 1 ? ', ' :
            '' %> <% }) %> <% } else { %> None <% } %>
          </p>
        </li>
        <% }); %>
      </ul>
      <% } %>
      <a
        href="/admin/college/<%= department.collegeId._id %>/departments"
        class="inline-block mt-6 text-purple-700 hover:underline font-medium"
      >
        ← Back to Departments
      </a>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>Departments - <%= college.name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 p-8">
    <div class="max-w-4xl mx-auto bg-white p-6 rounded-2xl shadow">
      <h2 class="text-2xl font-bold mb-4">
        Departments in <%= college.name %>
      </h2>

      <% if (departments.length === 0) { %>
      <p>No departments found.</p>
      <% } else { %>
      <ul class="space-y-4">
        <% departments.forEach(dept => { %>
        <li class="border p-4 rounded shadow-sm bg-gray-50">
          <h3 class="text-lg font-semibold"><%= dept.name %></h3>
          <a
            href="/admin/class/create/<%= dept._id %>"
            class="mt-2 inline-block text-blue-600 hover:underline"
            >+ Add Class</a
          >
          <a
            href="/admin/department/<%= dept._id %>/classes"
            class="mt-2 inline-block text-blue-600 hover:underline"
            >View classes
          </a>
          <a
            href="/admin/teacher/create/<%= dept._id %>"
            class="mt-2 inline-block text-blue-600 hover:underline"
            >+ Add Teacher</a
          >
          <a
            href="/admin/department/<%= dept._id %>/teachers"
            class="mt-2 inline-block text-blue-600 hover:underline"
            >View Teachers
          </a>
        </li>
        <% }); %>
      </ul>
      <% } %>

      <a
        href="/admin/colleges"
        class="inline-block mt-6 text-gray-600 hover:underline"
        >← Back to Colleges</a
      >
    </div>
  </body>
</html>
